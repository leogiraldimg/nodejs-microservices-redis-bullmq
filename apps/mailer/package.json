{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "clean:build": "rimraf ./dist && mkdir dist",
    "prebuild": "run-p clean:build",
    "build": "tsc",
    "serve:build": "pm2-runtime start dist/app.js --name api",
    "postbuild": "run-p serve:build",
    "start": "cross-env NODE_ENV=development nodemon",
    "test:ci": "cross-env NODE_ENV=test jest --runInBand",
    "test:cov": "cross-env NODE_ENV=test jest --runInBand --watchAll --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "src/app.ts"
    ]
  },
  "author": "Leonardo Giraldi Moreno Giuranno",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "morgan": "^1.10.0",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "jest-mock": "^29.3.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
